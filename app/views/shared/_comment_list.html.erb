<% comments = subject
    .comments
    .includes(:author)
    .order(created_at: :asc, id: :asc)
%>
<h2><%= comments.empty? ? "" : "Comments" %></h2>
<% comments.each do |comment| %>
    <blockquote>
        <p><%= comment.comment_text %></p>
        <footer>-<%= comment.author.username %></footer>
    </blockquote>
<% end %>
